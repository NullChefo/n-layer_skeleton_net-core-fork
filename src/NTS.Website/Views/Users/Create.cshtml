@model NTS.ApplicationServices.ViewModels.Users.UserVM

@{
    ViewData["Title"] = "Create user";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Users" asp-action="Create" method="post" class="form-horizontal" role="form">
    @Html.AntiForgeryToken()
    <hr />

    <div class="form-group">
        <label asp-for="@Model.FirstName" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="@Model.FirstName" class = "form-control" />
            <span asp-validation-for="@Model.FirstName" class = "text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.LastName" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="@Model.LastName" class="form-control" />
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.UserName" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="@Model.UserName" class="form-control" />
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Email" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="@Model.Email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.EmailConfirm" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="@Model.EmailConfirm" class="form-control" />
            <span asp-validation-for="@Model.EmailConfirm" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Password" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="@Model.Password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <input asp-for="@Model.ConfirmPassword" class="form-control" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.RoleId" class="col-md-2 control-label"></label>
        <div class="col-md-4">
            <select asp-for="@Model.RoleId" class="form-control">
                @foreach (var role in Model?.Roles)
                {
                    <option id="role-@role.Id" value="@role.Id" @(role.Name == "User" ? "selected" : string.Empty)>@role.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-offset-2 col-md-4">
            <div asp-validation-summary="All" class="text-danger validation-summary-error-messages"></div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <button type="submit" class="btn btn-default">
                <i class="glyphicon glyphicon-floppy-saved" aria-hidden="true"></i>
                <span>Save</span>
            </button>
        </div>
    </div>
</form>
<div>
    <a href="/Users/Index">
        <i class="glyphicon glyphicon-chevron-left" aria-hidden="true"></i>
        <span>Users</span>
    </a>
</div>

<environment include="Development">
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
</environment>
